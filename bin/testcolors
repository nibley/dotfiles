#! /usr/bin/env bash

# from https://unix.stackexchange.com/a/269085/305476

while getopts ":v" opt; do
	case ${opt} in
		v)
			verbose=1
		esac
done

mode2colors(){
    # foreground or background (only 3 or 4 are accepted)
    local fb="$1"
    [[ $fb != 3 ]] && fb=4
    local samples=(0 63 127 191 255)
    for         r in "${samples[@]}"; do
        for     g in "${samples[@]}"; do
            for b in "${samples[@]}"; do
            	if (( $verbose )); then
                	printf '\e[0;%s8;2;%s;%s;%sm[%03d;%03d;%03d] ' \
                		"$fb" "$r" "$g" "$b" "$r" "$g" "$b"
                else
                	printf '\e[0;%s8;2;%s;%s;%sm â–’ ' "$fb" "$r" "$g" "$b"
                fi
            done;
            printf '\e[m\n'
        done;
        printf '\e[m'
    done;
    printf '\e[m\n'
}
mode2colors 3
mode2colors 4
